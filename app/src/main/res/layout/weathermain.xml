<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DB8B8"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/webView1"
                android:layout_width="match_parent"
                android:layout_height="175dp" />

            <TextView
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text="CITY AND COUNTRY :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cityText"
                style="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/country"
                android:layout_marginTop="8dp"
                android:background="#80CCCC"
                android:gravity="center"
                android:textColor="#002952"
                android:textSize="18sp"
                android:textStyle="italic|bold" />

            <ImageView
                android:id="@+id/condIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityText"
                android:background="#E8E8E8" />

            <TextView
                android:id="@+id/Descr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/condIcon"
                android:layout_marginTop="10dp"
                android:text="CONDITION DESCRIPTION :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/condDescr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/Descr"
                android:layout_marginTop="8dp"
                android:background="#80CCCC"
                android:gravity="center"
                android:textColor="#002952"
                android:textSize="18sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/Temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/condDescr"
                android:layout_marginTop="10dp"
                android:text="TEMPERATURE :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/temp"
                style="@style/tempStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Temperature"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:background="#80CCCC"
                android:gravity="center"
                android:textColor="#002952"
                android:textSize="18sp"
                android:textStyle="italic|bold" />

            <WebView
                android:id="@+id/webView2"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_gravity="center"
                android:layout_weight="0.52" />

            <TextView
                android:id="@+id/pressLab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/temp"
                android:layout_marginTop="3dp"
                android:text="PRESSURE :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/press"
                style="@style/valData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pressLab"
                android:layout_marginTop="8dp"
                android:background="#80CCCC"
                android:gravity="center"
                android:textColor="#002952"
                android:textSize="18sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/humLab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/press"
                android:layout_marginTop="10dp"
                android:text="HUMIDITY :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hum"
                style="@style/valData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/humLab"
                android:layout_marginTop="8dp"
                android:background="#80CCCC"
                android:gravity="center"
                android:textColor="#002952"
                android:textSize="18sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/windLab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/hum"
                android:layout_marginTop="10dp"
                android:text="WIND SPEED :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/windSpeed"
                style="@style/valData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/windLab"
                android:layout_marginTop="8dp"
                android:background="#80CCCC"
                android:gravity="center"
                android:textColor="#002952"
                android:textSize="18sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/windangle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/windSpeed"
                android:layout_marginTop="10dp"
                android:text="WIND DEGREE :"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/windDeg"
                style="@style/valData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/windangle"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="#80CCCC"
                android:gravity="center"
                android:textColor="#002952"
                android:textSize="18sp"
                android:textStyle="italic|bold" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>